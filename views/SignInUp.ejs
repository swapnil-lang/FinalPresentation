<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" href="/Images/new logo.png">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="./CSS/signin.css">
  </head>
  <body>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form action="signIn" class="sign-in-form" method = "POST">
            <h2 class="title">Ping In</h2>
            <p style="color: white;"><%= credentials %></p>
			      <div class="input-field">
              <i class="fa fa-envelope"></i>
              <input type="text" placeholder="Email Id" id="form_email_1" name="form_email_0" onkeyup="check_email1(this); signin_btn_check(this);" required="required">
            </div>
            <div class="input-field">
              <i class="fa fa-lock"></i>
              <input type="password" placeholder="Password" id="Pass_word" name="Pass_word" maxlength="16" onkeyup="checkPassword(this); signin_btn_check(this);" minlength="7" required="required">
            </div>
            <input type="submit" value="Start Pinging" class="btn solid submit1">
            <a href = "/forgotPass"><input type="button" name = "forgotPass" value="Forgot Password" class="btn solid forgotpass"></a>
          </form>
          <form action="/SignUp" class="sign-up-form" method = "POST">
            <h2 class="title">Sign up</h2>
            <div class="input-field">
              <i class="fa fa-user"></i>
              <input type="text" name="form_email_1" placeholder="Full Name" onkeyup="lettersOnly(this); count(); btn_check.addEventListener(onkeyup,this);" minlength="2" maxlength="50" id="name" required="required">
            </div>
            <div class="input-field">
              <i class="fa fa-envelope"></i>
              <input type="email" placeholder="Email Id" id="form_email" name="form_email" onkeyup="check_email(this); btn_check.addEventListener(onkeyup,this);" required="required">
            </div>
			      <div class="input-field">
              <i class="fa fa-lock"></i>
              <input type="password" placeholder="Password" id="form_password" name="form_password" onkeyup="checkPasswordStrength(this); btn_check.addEventListener(onkeyup,this);" maxlength="16" class="pass" required="required">
            </div>
			      <div class="input-field">
              <i class="fa fa-lock"></i>
              <input type="password" placeholder="Re-Enter Password" id="form_password_re" name="form_password_re" onkeyup="check_retype_password(this); btn_check.addEventListener(onkeyup,this);" maxlength="16" class="pass check" required="required">
            </div>
            <input type="submit" class="submit-btn" value="Start Pinging">
           
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <button class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
          </div>
          <img src="./Images/SignPage/log.svg" class="image" alt="">
        </div>
        <div class="panel right-panel">
          <div class="content">
            <button class="btn transparent" id="sign-in-btn">
              Ping in
            </button>
          </div>
          <img src="./Images/SignPage/register.svg" class="image" alt="">
        </div>
      </div>
    </div>

    <script src="./JScript/SignPage/signinapp.js"></script>
  </body>
</html>